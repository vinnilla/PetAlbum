<h1 class="title">Cool Pets</h1>

<div class="container-fluid">
	<div class="row">
		<% array = [] %>
		<% while array.length < 6 do %>
			<% test = true %>
			<% num = rand(@pets.length).to_i %>
			<% array.each do |y| %>
				<% test = false if y == num %>
			<% end %>
			<% array << num if test %>
		<% end %>
		
		<% array.each do |index| %>
			<% @pet = @pets[index] %>
			<div class="col-xs-4 col-sm-4 col-md-4 pet-link">
				<%= link_to @pet.name, pet_path(@pet.id) %>
			</div>
		<% end %>
	</div>
</div>
