<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label "First Name" %><br>
    <%= f.text_field :f_name %>
  </div>
  <div class="field">
    <%= f.label "Last Name" %><br>
    <%= f.text_field :l_name %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :prof_pic %><br>
    <%= f.text_field :prof_pic %>
  </div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>