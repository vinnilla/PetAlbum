<div class="container-fluid box">
	<header>
		<h1 class="title"><%= @pet.name %></h1>
		<h4><%= "#{@pet.gender} #{@pet.breed}" %></h4>
		<p><%= @pet.bio %></p>
	</header>

	<div class="pet last">
		<%= link_to "Create Album", new_album_path(@pet.id) %><br>
		<%= link_to "Back to Profile", pets_path %><br>
	</div>

	<div class="container-fluid">
		<div class="row">
			<% counter = 0 %>
			<% @albums.each do |album| %>
				<div class="col-xs-12 col-sm-6 col-md-3 pet">
					<% if @photos.length != counter %>
						<%= image_tag @photos[counter].avatar_url(:thumb).to_s, class: "photo" %> <br>
						<% counter += 1 %>
					<% end %>
					<%= link_to album.title, album_path(@pet.id, album.id), class: "larger" %>
				</div>
			<% end %>
		</div>
	</div>

</div>