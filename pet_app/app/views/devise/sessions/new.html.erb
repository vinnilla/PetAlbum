<h2 class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid">
  <div class="field row">
    <%= f.label :email, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5" %><br />
    <%= f.email_field :email, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5 entry", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field row">
    <%= f.label :password, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5" %><br />
    <%= f.password_field :password, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5 entry", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field row">
      <div class="col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions row">
    <%= f.submit "Log in", class:'button' %>
  </div>
  </div>
<% end %>


<%= render "devise/shared/links" %>
