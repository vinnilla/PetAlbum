<h2 class="title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container-fluid">
  <div class="field row">
    <%= f.label :email, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-2 col-sm-offset-4 col-md-offset-5" %> <br/>
    <%= f.email_field :email, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5 entry", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field row">
    <%= f.label :password, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5" %> <br />
    <% if @minimum_password_length %>
    <em class="col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5 entry", autocomplete: "off" %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5" %><br />
    <%= f.password_field :password_confirmation, class:"col-xs-4 col-sm-4 col-md-2 col-xs-offset-4 col-sm-offset-4 col-md-offset-5 entry", autocomplete: "off" %>
  </div>

  <div class="actions row">
    <%= f.submit "Sign up", class:"button" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>